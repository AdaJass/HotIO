{% extends 'layout.jinja2' %}

{% block content %}
<form action="/private/makesearch" method="post" width="50%">
    <div class="form-group">
        <label for="hotkey"  class="col-sm-2 control-label">关键字: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="keyword" required id="hotkey" placeholder="请输入关键字">
        </div>
    </div>
    <div class="form-group">
        <label for="limit0"  class="col-sm-2 control-label">描述词1: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="limit0" value="0" id="limit0" placeholder="请添加描述词">
        </div>
    </div>
    <div class="form-group">
        <label for="limit1"  class="col-sm-2 control-label">描述词2: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="limit1" value="0" name="limit1" placeholder="请添加描述词">
        </div>
    </div>
    <div class="form-group">
        <label for="limit2"  class="col-sm-2 control-label">描述词3: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="limit2" value="0" name="limit2" placeholder="请添加描述词">
        </div>
    </div>

    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input name="is_save" type="checkbox"> 保存该关键字到数据库？
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">搜索</button>
    </div>
  </div>    
</form>
